<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>buku</title>
  </head>
  <body>
    <h1>{{title}}</h1>

    <button class="btn btn-primary" data-toggle="modal" data-target="#modalTambah">Tambah Data</button>

    <table class="table" id="tabel-buku">
        <thead class="thead-dark">
            <tr>
            <th scope="col">No</th>
            <th scope="col">Judul</th>
            <th scope="col">Pengarang</th>
            <th scope="col">Penerbit</th>
            <th scope="col">Tahun Terbit</th>
            <th scope="col">Opsi</th>
            </tr>
        </thead>
        <tbody>
            {{!-- each : looping --}}
            {{#each kategori}}
                <tr>
                    <td>{{id_buku}}</td>
                    <td>{{judul}}</td>
                    <td>{{pengarang}}</td>
                    <td>{{penerbit}}</td>
                    <td>{{tahun_terbit}}</td>
                    <td>
                        <button id="btn-edit" class="btn btn-warning" data-id="{{ id_buku }}" data-judul="{{ judul }}" data-pengarang="{{ pengarang }}" data-penerbit="{{ penerbit }}" data-tahun_terbit="{{ tahun_terbit }}">Edit</button>
                        <button id="btn-hapus" class="btn btn-danger" data-id="{{id_buku}}">Hapus</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>


  <!-- Modal Tambah Buku-->

    <form action="/view/buku/save" method="POST">
        <div class="modal fade" id="modalTambah" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tambah Buku</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                        <div class="from-group">
                            <label for="">Judul</label><br>
                            <input type="text" name="judul" class="from-control" placeholder="Isikan Nama Judul"><br>

                            <label for="">Pengarang</label><br>
                            <input type="text" name="pengarang" class="from-control" placeholder="Isikan Nama Pengarang"><br>

                            <label for="">Penerbit</label><br>
                            <input type="text" name="penerbit" class="from-control" placeholder="Isikan Nama Penerbit"><br>

                            <label for="">Tahun Terbit</label><br>
                            <input type="number" name="tahun_terbit" class="from-control" placeholder="Isikan Tahun Terbit">
                        </div>                
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


<!-- Modal Edit Kategori-->

    <form action="/view/buku/update" method="POST">
    <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <div class="from-group">
                        
                        <input type="hidden" name="id_buku" id="id_edit"><br>
                        <label for="">Judul Buku</label><br>
                        <input type="text" id="judul_edit" name="judul" class="from-control" placeholder="Isikan Judul"><br>
                        <label for="">Nama Pengarang</label><br>
                        <input type="text" id="pengarang_edit" name="pengarang" class="from-control" placeholder="Isikan Nama pengarang"><br>
                        <label for="">Nama Penerbit</label><br>
                        <input type="text" id="penerbit_edit" name="penerbit" class="from-control" placeholder="Isikan Nama penerbit"><br>
                        <label for="">Tahun Terbit</label><br>
                        <input type="text" id="tahun_terbit_edit" name="tahun_terbit" class="from-control" placeholder="Isikan Tahun Terbit">
                    </div>                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </div>
        </div>
    </div>
    </form>


{{!-- Modal Hapus --}}
    <form action="/view/buku/delete" method="POST">
        <div class="modal fade" id="modalHapus" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-titlmodale" id="exampleModalLabel">Hapus</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Yakin mau dihapus ?</p>
                        <div class="form-group">
                            <input type="hidden" name="id_buku" id="id_hapus">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Hapus</button>
                    </div>
                </div>
            </div>
        </div>
    </form>





    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  
   <script>
        $(document).ready(function(){
            $('#tabel-buku').on('click', '#btn-edit', function(){
                let id_buku = $(this).data('id');
                let judul = $(this).data('judul');
                let pengarang = $(this).data('pengarang');
                let penerbit = $(this).data('penerbit');
                let tahun_terbit = $(this).data('tahun_terbit');
                $('#modalEdit').modal('show');
                $('#id_edit').val(id_buku);
                $('#judul_edit').val(judul);
                $('#pengarang_edit').val(pengarang);
                $('#penerbit_edit').val(penerbit);
                $('#tahun_terbit_edit').val(tahun_terbit);

                console.log("ID ",id_buku)
                console.log("Judul ", judul);
                console.log("Pengarang ", pengarang);
                console.log("Penerbit ", penerbit);
                console.log("Tahun Terbit ", tahun_terbit);
            });

            $('#tabel-buku').on('click', '#btn-hapus', function(){
                let id_buku = $(this).data('id');
                $('#modalHapus').modal('show');
                $('#id_hapus').val(id_buku);
                console.log(id_buku)
            });
        });


        fetch('http://localhost:2000/api/buku')
        .then(data => data.json())
        .then(data => console.log(data))


    </script>
  </body>
</html>